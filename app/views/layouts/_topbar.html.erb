<div class="fill">
  <div class="container">
    <h3><%= link_to "MuseumCreated.com", root_path %></h3>
    <ul class="nav">
      <li><%= link_to "Artists", artists_path %></li>
      <li><%= link_to "Works", works_path %></li>
      <li><%= link_to "Search", search_path %></li>
    </ul>
    <%= form_tag(artists_path, :method => :get) do %>
