<% @title = @artist.username %>
<div class="row">
  <div class="span4">
    <h2><%= @artist.username %></h2>
    <h3><%= @artist.name %></h3>
    <br>
    <p>
    <%= link_to artist_image_tag(@artist,""), @artist.username %>
    </p>
    <% if user_signed_in? && current_user.id == @artist.id -%>
      <%= link_to 'プロフィールを編集する', settings_profile_path %><br />
    <% end -%>
    <h3>自己紹介</h3>
    <p><%= Sanitize.clean( @artist.biography, Sanitize::Config::CUSTOM).html_safe if @artist.biography.present? %></p>
    <h3>ジャンル</h3>
    <p><%= @artist.genre.name if @artist.genre.present?%></p>
    <% if @artist.url.present? -%>
      <h3>ホームページ</h3>
      <p><%= link_to @artist.url,@artist.url, :target => "_blank" %></p>
    <% end -%>
    <h3>活動地域</h3>
    <% @artist.areas.each do |tag| -%>
      <%= link_to tag.name, artists_path(:area_tag => tag.name) %>
    <% end -%>
    <h3>できること</h3>
    <% @artist.skills.each do |tag| -%>
      <%= link_to tag.name, artists_path(:skill_tag => tag.name) %>
    <% end -%>
    <h3>してほしいこと</h3>
    <% @artist.interests.each do |tag| -%>
      <%= link_to tag.name, artists_path(:interest_tag => tag.name) %>
    <% end -%>
    <h3>フリーワード</h3>
    <% @artist.free_words.each do |tag| -%>
      <%= link_to tag.name, artists_path(:free_word_tag => tag.name) %>
    <% end -%>
    <br />
  </div>

  <div class="span4">
    <h2>Works</h2>
    <%= link_to "新しい作品を登録する", new_work_path, class: "btn btn-small" if user_signed_in? && @artist.username == current_user.username %>
    <% if @works.present? %>
      <% @works.each do |work| %>
        <h4><%= link_to work.title, work_path(work) %></h4>
        <p>
        <%= link_to work.url, work.url, :target => "_blank" if work.url.present? %><br />
        <% if work.tag_list.present? -%>
          <b>タグ: </b><%= work.tag_list %><br />
        <% end -%>
        <% if work.summary.present? -%>
          <blockquote>
            <p><%= work.summary %></p>
          </blockquote>
        <% end -%>
        </p>
        <p>Created at <%= work.created_at.to_s(:db) %>
      <% if user_signed_in? && current_user.id == work.user.id -%>
        | <%= link_to "編集", edit_work_path(work) %> | <%= link_to "削除" ,work_path(work), confirm: '本当に削除しますか？', method: :delete %>
    <% end -%>
    </p>
    <div class="page-header", style="margin-top: 10px">
    </div>
  <% end %>
  <b><%= @artist.username %>の作品一覧を<%= link_to "見る",artist_works_path(:username => @artist.username) %></b>
<% else %>
  <p>登録されている作品はありません</p>
<% end %>
  </div>

  <div class="span4">
    <% if @artist.locations.present? %>
    <h2>よく活動する場所</h2>
    <div class="profile">
    <%= gmaps4rails(@json) if @json.present? %>
  </div>
  <% end %>
    <div class="page-header", style="margin-top: 10px">
    </div>
    <h2>最近のイベント</h2>
    <%= link_to "新しいイベントを登録する", new_event_path, class: "btn btn-small" if user_signed_in? && @artist.username == current_user.username %>
    <% if @events.present? %>
      <% @events.each do |event| %>
        <h4><%= link_to event.title, event_path(event) %></h4>
        <h3>日時：<%= event.start_time.to_s(:db) %></h3>
        <p>
        <%= link_to event.url, event.url, :target => "_blank" if event.url.present? %><br />
        <% if event.tag_list.present? -%>
          <b>タグ: </b><%= event.tag_list %><br />
        <% end -%>
        <% if event.description.present? -%>
          <blockquote>
            <p><%= event.description %></p>
          </blockquote>
        <% end -%>
        <% if user_signed_in? && current_user.id == event.user.id -%>
          | <%= link_to "編集", edit_event_path(event) %> | <%= link_to "削除" ,event_path(event), confirm: '本当に削除しますか？', method: :delete %>
      <% end -%>
      </p>
      </p>
    <div class="page-header", style="margin-top: 10px">
    </div>
  <% end %>
  <b><%= @artist.username %>のイベント一覧を<%= link_to "見る",artist_events_path(:username => @artist.username) %></b>
<% else %>
  <p>登録されているイベントはありません</p>
<% end %>
    <div class="page-header", style="margin-top: 10px">
    </div>
    <h3>Comments</h3>
    <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:comments href="<%= request.url %>" num_posts="2" width="300"></fb:comments>
  </div>
</div>
