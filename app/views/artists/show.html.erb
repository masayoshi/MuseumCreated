<% @title = @artist.username %>
<div class="row", style='margin-top: 10px'>
  <div class="span5 columns">
    <h2><%= @artist.username %></h2>
    <h3><%= @artist.name %></h3>
    <br>
    <p>
      <%= link_to artist_image_tag(@artist,""), @artist.username %>
    </p>
    <% if user_signed_in? && current_user.id == @artist.id -%>
      <%= link_to 'プロフィールを編集する', settings_profile_path %><br />
    <% end -%>
    <h3>自己紹介</h3>
    <p><%= Sanitize.clean( @artist.biography, Sanitize::Config::CUSTOM).html_safe if @artist.biography.present? %></p>
    <h3>ジャンル</h3>
    <p><%= @artist.genre.name if @artist.genre.present?%></p>
    <% if @artist.url.present? -%>
      <h3>ホームページ</h3>
      <p><%= link_to @artist.url,@artist.url, :target => "_blank" %></p>
    <% end -%>
    <h3>活動地域</h3>
    <% @artist.areas.each do |tag| -%>
      <%= link_to tag.name, artists_path(:area_tag => tag.name) %>
    <% end -%>
    <h3>できること</h3>
    <% @artist.skills.each do |tag| -%>
      <%= link_to tag.name, artists_path(:skill_tag => tag.name) %>
    <% end -%>
    <h3>してほしいこと</h3>
    <% @artist.interests.each do |tag| -%>
      <%= link_to tag.name, artists_path(:interest_tag => tag.name) %>
    <% end -%>
    <h3>フリーワード</h3>
    <% @artist.free_words.each do |tag| -%>
      <%= link_to tag.name, artists_path(:free_word_tag => tag.name) %>
    <% end -%>
    <br />
  </div>

  <div class="span6 columns">
    <h2>Works</h2>
    <%= link_to "新しい作品を登録する", new_work_path if user_signed_in? && @artist.username == current_user.username %>
    <%= link_to "RSSを管理する", feeds_path if user_signed_in? && @artist.username == current_user.username %>
    <% @works.each do |work| %>
      <h4><%= link_to work.title, work_path(work) %></h4>
      <p>
        <%= link_to work.url, work.url, :target => "_blank" if work.url.present? %><br />
        <% if work.tag_list.present? -%>
          <b>タグ: </b><%= work.tag_list %><br />
        <% end -%>
        <% if work.summary.present? -%>
          <blockquote>
            <p><%= work.summary %></p>
          </blockquote>
        <% end -%>
      </p>
      <p>Created at <%= work.created_at %>
        <% if user_signed_in? && current_user.id == work.user.id -%>
          | <%= link_to "編集", edit_work_path(work) %> | <%= link_to "削除" ,work_path(work), confirm: '本当に削除しますか？', method: :delete %>
        <% end -%>
      </p>
      <div class="page-header", style="margin-top: 10px">
      </div>
    <% end %>
    <b><%= @artist.username %>の作品を<%= link_to "もっと見る",artist_works_path(:username => @artist.username) %></b>
  </div>
  
  <div class="span5 columns">
    <h3>Collaboration</h3>
    <p>オファーされた数：<b><%= @artist.offers.count %></b></p>
    <p>オファーした数：<b><%= @artist.offerings.count %></b></p>
    <% if user_signed_in? && current_user.id == @artist.id -%>
      <%= link_to 'コラボレーションを管理する', offers_path %><br />
    <% end -%>    
    <% if user_signed_in? && current_user.id != @artist.id -%>
      <% if @artist.offers.offered_by(current_user.id).present? %>
        <p>あなたがオファーした数：<b><%= @artist.offers.offered_by(current_user.id).count %></b></p>
      <% end %>
      <%= link_to "#{@artist.username}にオファーする", new_offer_path(:artist_id => @artist.id ), :class=>"btn small primary" %>
    <% end -%>
    <h3>Comments</h3>
    <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:comments href="<%= request.url %>" num_posts="2" width="300"></fb:comments>
  </div>
</div> 
