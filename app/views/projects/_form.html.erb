<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert-message block-message error">
      <h3><%= "#{@project.errors.count}つのエラーのため更新できませんでした。" %></h3>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <fieldset>
    <div class="clearfix">
      <%= f.label :title, 'タイトル' %>
      <div class="input">
        <%= f.text_field :title ,:class => "xxlarge"%>
        <span class="help-block">プロジェクトのタイトルを入力してください。</span>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :description, 'プロジェクト内容' %>
      <div class="input">
        <%= f.text_area :description, :class => "xxlarge", :rows => "10"  %>
        <span class="help-block">プロジェクトの内容を記述してください。</span>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "更新する", :class => "btn primary", :name => "commit" %>
    </div>
  </fieldset>
<% end %>
