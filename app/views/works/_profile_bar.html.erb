<div class="row", style='margin-top: 10px'>
  <div class="span16">
    <h2><%= artist_image_tag(current_user, "30") %> <%= current_user.username%>の作品登録</h2>
    <ul class="tabs">
      <li><%= link_to "作品一覧", artist_works_path(:username => current_user.username) %></li>
      <li <%= "class='active'" if current_page?(new_work_path)%>><%= link_to "新規登録", new_work_path %></li>
      <% if @work && @work.id.present? -%>
        <li class='active' ><%= link_to "更新", edit_work_path(@work) %></li>
      <% end -%>
      <li <%= "class='active'" if current_page?(feeds_path)%>><%= link_to "RSS登録", feeds_path %></li>
     </ul>
  </div> 
</div>
